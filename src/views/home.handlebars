
<button style="margin-top:30px"><a href="http://localhost:8080/realTimeProducts">Editar productos</a></button>
<h2>Productos</h2>
<main
  class="container"
>
  {{#each productos}}
    <section class="cardContainer">
      <h2 class="titleCard">{{this.title}}</h2>
      <img class="imgCard" src={{this.thumbnail}} alt="{{this.title}}" />
      <section class="textCard">
        <p> ID: {{this._id}}</p>
        <p >{{this.description}}</p>
        <p>Stock: {{this.stock}} unidades</p>
        <p><span>${{this.price}}</span></p>
      </section>
    </section>
  {{/each}}

</main>

